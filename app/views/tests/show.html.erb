<% if @test.questions.count.positive? %>
<h1>Questions for the test <%= @test.title%>, level <%= @test.level%>:</h1>

<tr>
  <% @test.questions.each do |question| %>
    <td>
      <p><%= question.body %></p>
    </td>
  <% end %>
</tr>

<% else %>

<h1>This test is still empty!</h1>

<% end %>

<%= link_to 'Back', tests_path%>
<%= link_to 'Edit test', edit_test_path(@test) %>
<%= link_to 'Add question', new_test_question_path(@test)  %>
<%= link_to 'Edit questions', test_questions_path(@test)  %>
