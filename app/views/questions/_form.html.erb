<h1><%= question_header(@question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>

  <p>
    <%= form.label :body, 'Текст вопроса:' %>
    <br>
    <%= form.text_area :body %>
    <% if @question.errors.empty? %><br><% end %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', test_questions_path  %>
