<% if user_signed_in? %>
  <div class="container my-5">
    <h1 class="mb-4">Свяжитесь с нами</h1>

    <%= form_for @feedback, html: { class: "bg-light p-4 rounded shadow" } do |form| %>
    
      <div class="form-group mb-3">
        <%= form.label :message, "Сообщение", class: "form-label" %>
        <%= form.text_area :message, class: "form-control", rows: 5 %>
      </div>

      <div class="d-grid">
        <%= form.submit "Отправить", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="mb-4">Оставьте свой отзыв</h1>
        <%= form_tag feedbacks_path, class: "bg-light p-4 rounded shadow" do %>

          <div class="mb-3">
            <%= label_tag :name, nil, class: "form-label" %>
            <%= text_field_tag :name, nil, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= label_tag :email, nil, class: "form-label" %>
            <%= email_field_tag :email, nil, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= label_tag :message, nil, class: "form-label" %>
            <%= text_area_tag :message, nil, class: "form-control", rows: 5 %>
          </div>

          <div class="d-grid">
            <%= submit_tag "Отправить", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
