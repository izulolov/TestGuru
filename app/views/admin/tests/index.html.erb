<div class="admincontent container mt-4">
  
  <div class="text-center p-2">
    <h1><%= t('.header') %></h1>
  </div>

  <div class="quick-actions d-flex justify-content-start p-2">
    <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary me-2' %>
    <%= link_to t('.all_gists'), admin_gists_path, class: 'btn btn-primary' %>
  </div>

  <%= render 'shared/errors', resource: @test %>
  
  <div class="mt-3">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.questions_count') %></th>
          <th colspan="4"><%= t('.actions') %></th>
          <th>Status</th>
          <th>Publish/Confiscated</th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
