<div class="admincontent">
  
  <div class="d-flex justify-content-center p-2">
    <h1><%= t('.header') %></h1>
  </div>

  <div class="quick-actions d-flex justify-content-start p-2">
    <%= link_to t('.new_test'), new_admin_test_path, class: 'link-primary pe-2' %>
    <%= link_to t('.all_gists'), admin_gists_path, class: 'link-primary pe-2' %>
  </div>

  <div>
    <table class="table table-striped table-hover">
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.questions_count') %></th>
        <th colspan="4"><%= t('.actions') %></th>
      </tr>
        <%= render @tests %>
    </table>
  </div>
</div>
