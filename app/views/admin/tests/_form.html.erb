<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, id: :test_title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :level, class: 'form-label' %>
    <%= form.number_field :level, id: :test_level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, class: 'form-label' %>
    <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-select' } %>
  </div>

  <!-- Добавляем поле для таймера -->
  <div class="mb-3">
    <%= form.label :timer, t('.timer_label'), class: 'form-label' %>
    <div class="input-group">
      <%= form.number_field :timer, id: :test_timer, class: 'form-control', min: 0, placeholder: t('.timer_placeholder') %>
      <span class="input-group-text"><%= t('.minutes') %></span>
    </div>
    <div class="form-text"><%= t('.timer_help') %></div>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
