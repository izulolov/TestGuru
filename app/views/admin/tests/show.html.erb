<div class="admincontent container mt-4">
  <% if @test.questions.count.positive? %>
    <h1 class="mb-4"><%= t('.header', test_title: @test.title, test_level: @test.level) %>:</h1>

    <div class="list-group">
      <% @test.questions.each do |question| %>
        <div class="list-group-item">
          <p><%= question.body %></p>
        </div>
      <% end %>
    </div>

  <% else %>
    <h1 class="text-danger"><%= t('.if_test_empty') %></h1>
  <% end %>

  <div class="mt-3">
    <%= link_to t('.back'), admin_tests_path, class: 'btn btn-secondary me-2' %>
    <%= link_to t('.edit'), edit_admin_test_path(@test), class: 'btn btn-warning me-2' %>
    <%= link_to t('.add_question'), new_admin_test_question_path(@test), class: 'btn btn-success me-2' %>
    <%= link_to t('.edit_questions'), admin_test_questions_path(@test), class: 'btn btn-info' %>
  </div>
</div>
