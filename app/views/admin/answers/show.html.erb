<div class="admincontent container mt-4">
  <h1 class="mb-4"><%= t('.question') %>:</h1>

  <div class="card mb-4">
    <div class="card-body">
      <p class="card-text">
        <strong><%= @answer.question.body %></strong>
      </p>

      <p class="card-text">
        <strong><%= t('.answer') %>:</strong>
        <%= @answer.body %>
      </p>

      <p>
        <% if @answer.correct %>
          <span class="badge bg-success"><%= t('.correct_true') %></span>
        <% else %>
          <span class="badge bg-danger"><%= t('.correct_false') %></span>
        <% end %>
      </p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to t('.back'), admin_question_path(@answer.question), class: 'btn btn-secondary me-2' %>
    <%= link_to t('.edit'), edit_admin_answer_path(@answer), class: 'btn btn-warning' %>
  </div>
</div>
