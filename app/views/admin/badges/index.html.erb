<div class="container mb-4">
  <h1 class="text-center mb-4">Все бейджи</h1>
  <div class="row g-4">
    <% @badges.each do |badge| %>
      <div class="col-3">
        <div class="card">
          <div class="text-center">
            <img src="<%= badge.image_url %>" class="card-img-top" alt="<%= badge.name %>" style="width: 200px; height: 200px; object-fit: cover;">
          </div>
          <div class="card-body text-center">
            <h5 class="card-title"><%= badge.name %></h5>
            <div class="mt-3">
              <%= link_to 'Просмотр', admin_badge_path(badge), class: 'btn btn-primary mb-2' %>
              <%= link_to 'Редактировать', edit_admin_badge_path(badge), class: 'btn btn-secondary mb-2' %>
              <%= link_to 'Удалить', admin_badge_path(badge), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот бейдж?' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
