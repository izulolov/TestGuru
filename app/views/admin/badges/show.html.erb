<div class="container mb-4">
  <h1 class="text-center mb-4">Бейдж: <%= @badge.name %></h1>

  <div class="mb-3">
    <strong>Изображение:</strong>
    <div>
      <%= image_tag @badge.image_url, alt: @badge.name, class: 'img-fluid' %>
    </div>
  </div>

  <div class="mb-3">
    <strong>Правило:</strong>
    <p><%= Badge::RULES[(@badge.rule).to_sym] %></p>
  </div>

  <div class="mb-3">
    <strong>Создан:</strong>
    <p><%= @badge.created_at %></p>
  </div>

  <div class="mb-3">
    <strong>Обновлен:</strong>
    <p><%= @badge.updated_at %></p>
  </div>

  <div class="text-center">
    <%= link_to 'Редактировать', edit_admin_badge_path(@badge), class: 'btn btn-primary' %>
    <%= link_to 'Удалить', admin_badge_path(@badge), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот бейдж?' }, class: 'btn btn-danger' %>
    <%= link_to 'Назад', admin_badges_path, class: 'btn btn-secondary ms-2' %>
  </div>
</div>
