<tr>
  <td><%= question.body %></td>
  <td>
    <%= link_to t('admin.author_actions.show'), admin_question_path(question), 
                class: 'btn btn-info btn-sm', 
                method: :get %>
  </td>
  <td>
    <%= link_to t('admin.author_actions.edit'), edit_admin_question_path(question), 
                class: 'btn btn-warning btn-sm', 
                method: :get %>
  </td>
  <td>
    <%= link_to t('admin.author_actions.delete'), admin_question_path(question.id), 
                class: 'btn btn-danger btn-sm', 
                method: :delete, 
                data: { confirm: t('admin.author_actions.delete_confirmation') } %>
  </td>
</tr>
