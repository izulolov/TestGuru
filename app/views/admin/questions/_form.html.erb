<h1><%= question_header(@question) %></h1>

<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body, 'Текст вопроса:' %>
    <br>
    <%= form.text_area :body %>
    <% if @question.errors.empty? %><br><% end %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_test_questions_path(@question.test)  %>
