<div class="admincontent container mt-4">
  <h1 class="mb-4"><%= question_header(@question) %></h1>

  <%= form_with model: [:admin, @test, @question], local: true do |form| %>
    <%= render 'shared/errors', resource: @question %>
    
    <div class="mb-3">
      <%= form.label :body, t('.body'), class: 'form-label' %>
      <%= form.text_area :body, class: 'form-control' %>
      <% if @question.errors.empty? %><br><% end %>
    </div>

    <div class="mb-3">
      <%= form.submit t('.submit'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to t('.back'), admin_test_questions_path(@question.test), class: 'btn btn-secondary' %>
  </div>
</div>
