<div class="admincontent container mt-4">
  <h1 class="mb-4"><%= t('.header', title: @question.test.title) %></h1>
  
  <p class="card-text mb-4">
    <%= @question.body %>
  </p>

  <h2 class="mb-3"><%= t('.answers') %></h2>
  
  <div class="mb-3">
    <%= link_to t('.add_answer'), new_admin_question_answer_path(@question), class: 'btn btn-primary' %>
  </div>

  <ol class="list-group mb-4">
    <%= render @question.answers %>
  </ol>

  <div class="mt-3">
    <%= link_to t('.edit'), edit_admin_question_path(@question), class: 'btn btn-warning me-2' %>
    <%= link_to t('.back'), admin_test_path(@question.test), class: 'btn btn-secondary' %>
  </div>
</div>
