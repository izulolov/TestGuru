<div class="admincontent container mt-4">
  <% if @questions.count.positive? %>
    <h1 class="mb-4"><%= t('.header', test_title: @test.title) %></h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t('.table_header_questions') %></th>
          <th colspan="3"><%= t('.table_header_actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @questions %>
      </tbody>
    </table>
    
  <% else %>
    <h1 class="text-danger">This test is empty!</h1>
  <% end %>

  <div class="mt-3">
    <%= link_to t('admin.author_actions.back'), admin_test_path(@test), class: 'btn btn-secondary me-2' %>
    <%= link_to t('.add_questions'), new_admin_test_question_path(@test), class: 'btn btn-primary' %>
  </div>
</div>
