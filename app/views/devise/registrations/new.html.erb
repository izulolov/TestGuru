<h2><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="last_name">
    <%= f.label t('.last_name') %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>


  <div class="first_name">
    <%= f.label t('.first_name') %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>


  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('.password') %>
    <% if @minimum_password_length %>
    <em>(<%= t('.minimum_password_length', length: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
