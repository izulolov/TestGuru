<div class="row justify-content-center mt-5">  
  <div class="col-12 col-md-6">
    <h2 class="page-title" ><%= t('.header') %></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card border-primary">
        <div class="d-flex flex-column justify-content-center align-items-center">
          <div class="form-group mb-3 w-50">
            <%= f.label t('.email'), class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email' %>
          </div>
    
          <div class="form-group mb-3 w-50">
            <%= f.label t('.password'), class: "form-label" %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
    
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3 w-50">
              <%= f.check_box :remember_me, class:"form-check-input" %>
              <%= f.label t('.remember_me'), class:"form-check-label" %>
            </div>
          <% end %>

          <div class="mb-3 d-flex align-items-center justify-content-center">
            <%= f.submit t('.log_in'), class:"btn btn-lg btn-primary rounded-pill" %>
          </div>
        
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
